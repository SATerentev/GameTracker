@model GameTracker.ViewModel.Account.EmailViewModel

<div class="form_window">
    <form asp-action="SendCode" asp-controller="PasswordRecovery" method="post" novalidate>
        <div asp-validation-summary="ModelOnly"></div>
        <h2>Восстановление пароля</h2>
        <div class="form_label">
            <label asp-for="Email">Введите Email:</label>
            <input asp-for="Email" />
            <span asp-validation-for="Email"></span>
            <button class="button_submit">Отправить код</button>
        </div>
    </form>
</div>