@{
    ViewData["Title"] = "Восстановление аккаунта";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm">
                <div class="card-header text-center">
                    <h2>Ваш аккаунт удален</h2>
                </div>
                <div class="card-body justify-content-center">
                    <div class="mb-2">
                        <form asp-controller="AccountRecovery" asp-action="Recovery" method="post">
                            <button type="submit" class="btn btn-success">Восстановить аккаунт</button>
                        </form>
                    </div>

                    <div class="mb-2">
                        <form asp-action="Logout" asp-controller="Login" method="post">
                            <button type="submit" class="btn btn-danger">Выйти из аккаунта</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>